                <th>Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody id="myBody">
           
        </tbody>
    </table>

    <script>
        var shoppingArray =[];
        function showData(){
            //get function data
            let date = document.myForm.date.value;
            let name = document.myForm.name.value;
            let price = document.myForm.price.value;
            let total=document.myForm.total.value;
            //console.log(name,age,address);

        //create student object
        let list ={
            shopping_date:date,
            item_name :name,
            item_price : price,
          total_price:total,
            
        }
        //console.log(student);

        //array  push data
       shoppingArray.push(list) ;
        console.log(shoppingArray);
        

        //show Table Data
        getData();
    }
        function getData(){
        let html='';
        for(let i=0;i<shoppingArray.length; i++) {
            //console.log(studebtArray[i]);
            let shoppingObj = shoppingArray[i];

            html +=`
            <tr>
                <td>${i+1}</td>
                <td>${shoppingObj.shopping_date}</td>
                <td>${shoppingObj.item_name}</td>
            </tr>
            <tr>
                <td>${shoppingObj.total_price}</td>
                </tr>`;


        }
        document.getElementById('myBody').innerHTML= html;

    }
    // function getData(){
    //     let total='';
